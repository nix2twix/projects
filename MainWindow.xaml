<Window x:Class="MCApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MCApp"
        mc:Ignorable="d"
        Title="MCApplication" Height="720" Width="1280" Icon="/office-building.png"
        Loaded="Window_Loaded"
        WindowState="Maximized">

    <Grid Background="#d3d1e4" Margin="0,0,-155,0">
        <TabControl Margin="50,50,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TabItem Header="Редактирование списка услуг" FontFamily="Cambria Math" Background="#FF8675A9" Width="600"
                     Foreground="#FF342A48">
                <Grid Background="#e8e2f0" MinHeight="500" Width="1200">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition Width="240"/>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition Width="220"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="230"/>
                        <RowDefinition Height="120"/>
                        <RowDefinition Height="220"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.ColumnSpan="6" Text="Добавление новой услуги" 
                           FontSize="30" Margin="20,25,0,0" Foreground="#8675a9"
                           HorizontalAlignment="Left"/>
                    <TextBlock Grid.ColumnSpan="6" Grid.Row="1" Text="Удаление услуги (по номеру в базе)" 
                           FontSize="30" Margin="20,0,0,0" Foreground="#8675a9"
                           HorizontalAlignment="Left"/>
                    <TextBox Grid.Row="0" 
                             x:Name="serviceNameTextBox"  
                             MinWidth="180"
                             MinHeight="18"
                             HorizontalAlignment="Center" Margin="0,82,0,0"
                             Text=" Название услуги"
                             TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Cambria Math" 
                             Foreground="#FF342A48" BorderBrush="#8675a9" 
                             Background="#FFE1D7EB"/>
                    <TextBox x:Name="minCountTextBox"
                             MinWidth="200"
                             MinHeight="18"
                        HorizontalAlignment="Center" Margin="0,82,0,0"
                             Grid.Column="1"
                        Text=" Мин. кол-во элементов в заказе"
                        TextWrapping="Wrap"
                        VerticalAlignment="Top" FontFamily="Cambria Math" 
                        Foreground="#FF342A48" BorderBrush="#8675a9" Background="#FFE1D7EB"/>
                    <TextBox x:Name="maxCountTextBox"  Grid.Column="1"
                        HorizontalAlignment="Center" Margin="0,165,0,0"
                        Text="  Макс. кол-во элементов в заказе"
                        TextWrapping="Wrap" MinWidth="200" MinHeight="18" 
                        VerticalAlignment="Top" FontFamily="Cambria Math" 
                        Foreground="#FF342A48" BorderBrush="#8675a9" Background="#FFE1D7EB"/>
                    <TextBox 
                        x:Name="measureTextBox"
                        HorizontalAlignment="Center" Margin="0,165,0,0"
                             Grid.Column="0" 
                        Text=" Ед. измерения"
                        TextWrapping="Wrap" MinWidth="180" MinHeight="18" 
                        VerticalAlignment="Top" FontFamily="Cambria Math" 
                        Foreground="#FF342A48" BorderBrush="#8675a9" Background="#FFE1D7EB"/>
                    <TextBox x:Name="idMCTextBox"
                        HorizontalAlignment="Center" Margin="0,84,0,0"
                             Grid.Column="2"
                        Text=" ID управляющей компании"
                        TextWrapping="Wrap" MinWidth="180" MinHeight="18"
                        VerticalAlignment="Top" FontFamily="Cambria Math" 
                        Foreground="#FF342A48" BorderBrush="#8675a9" 
                        Background="#FFE1D7EB"/>
                    <Button Grid.Column="3" Content="Внести новую запись" 
                            Background="#FF8675A9"
                            MinHeight="25" MinWidth="200"
                            HorizontalAlignment="Left" Margin="0,80,0,0" 
                            VerticalAlignment="Top" Foreground="White" Click="ButtonInsertNewService_Click"/>
                    <TextBox x:Name="serviceIDToDelTextBox"  MinWidth="180" MinHeight="18" 
                        HorizontalAlignment="Center" Margin="0,62,0,0"
                        Text=" Номер (ID) услуги"
                        TextWrapping="Wrap" Grid.Row="1"
                        VerticalAlignment="Top" FontFamily="Cambria Math" 
                        Foreground="White" BorderBrush="#8675a9" Background="#FFA592CC"/>
                    <Button Grid.Column="1" Content="Удалить запись" MinHeight="25" MinWidth="200"
                        HorizontalAlignment="Center" Margin="0,58,0,0" Grid.Row="1"
                        VerticalAlignment="Top" Foreground="White" Click="DeleteServiceByID_Click" Background="#FF8675A9"/>
                    <TextBlock Grid.ColumnSpan="6"  Text="Изменение услуги" 
                        FontSize="30" Margin="20,20,0,0" Foreground="#8675a9"
                        HorizontalAlignment="Left"  Grid.Row="02"/>
                    <TextBox Grid.Row="2" 
                        x:Name="newServiceNameTextBox"  
                        MinWidth="180" MinHeight="18" 
                        HorizontalAlignment="Center" Margin="0,139,0,0"
                        Text=" Новое название услуги"
                        TextWrapping="Wrap" 
                        VerticalAlignment="Top" FontFamily="Cambria Math" 
                        Foreground="#FF342A48" BorderBrush="#8675a9" Background="#FFE1D7EB" Width="100"/>
                    <TextBox x:Name="newMinCountTextBox" MinWidth="200" MinHeight="18" 
                        HorizontalAlignment="Center" Margin="0,62,0,0"
                        Grid.Column="1"
                        Text=" Мин. кол-во элементов в заказе"
                        TextWrapping="Wrap"
                        VerticalAlignment="Top" FontFamily="Cambria Math" 
                        Foreground="#FF342A48" BorderBrush="#8675a9" Background="#FFE1D7EB" Grid.Row="2"/>
                    <TextBox x:Name="newMaxCountTextBox"  
                        HorizontalAlignment="Center" Margin="0,139,0,0"
                        Text=" Макс. кол-во элементов в заказе"
                        TextWrapping="Wrap" MinWidth="200" MinHeight="18"   Grid.Column="1"
                        VerticalAlignment="Top" FontFamily="Cambria Math" 
                        Foreground="#FF342A48" BorderBrush="#8675a9" Background="#FFE1D7EB" Grid.Row="2"/>
                    <TextBox 
                        x:Name="newMeasureTextBox"
                        HorizontalAlignment="Center" Margin="0,139,0,0"
                        Grid.Column="2" 
                        Text=" Ед. измерения"
                        TextWrapping="Wrap" MinWidth="180" MinHeight="18" 
                        VerticalAlignment="Top" FontFamily="Cambria Math" 
                        Foreground="#FF342A48" BorderBrush="#8675a9" Background="#FFE1D7EB" Grid.Row="2"/>
                    <TextBox x:Name="newIDMCTextBox"
                        HorizontalAlignment="Left"
                        Grid.Column="2"
                        Text=" ID управляющей компании"
                        TextWrapping="Wrap" MinWidth="180" MinHeight="18" 
                        VerticalAlignment="Top" FontFamily="Cambria Math" 
                        Foreground="#FF342A48" BorderBrush="#8675a9" 
                        Background="#FFE1D7EB" Grid.Row="2" Margin="20,62,0,0"/>
                    <Button Grid.Column="3" Content="Изменить запись" MinHeight="25" MinWidth="200"
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Top" Foreground="White" Click="ButtonInsertNewService_Click" Grid.Row="2" Margin="0,58,0,0" Background="#FF8675A9"/>
                    <TextBox Grid.Row="2" 
                        x:Name="serviceToChangeIDTextBox"  
                        MinWidth="180" MinHeight="18" 
                        HorizontalAlignment="Center" Margin="0,62,0,0"
                        Text=" ID изменяемой услуги"
                        TextWrapping="Wrap" 
                        VerticalAlignment="Top" FontFamily="Cambria Math" 
                        Foreground="White" BorderBrush="#8675a9" Background="#FFA592CC"/>


                </Grid>
            </TabItem>
            <TabItem Header="Изменение цен по локациям" FontFamily="Cambria Math" Background="#FF8675A9" Width="600"
                     Foreground="#FF342A48">
                <Grid Background="#e8e2f0" MinHeight="500" Width="1200">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="177*"/>
                        <ColumnDefinition Width="23*"/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
